@page "/thirdcounter"
@layout CounterLayout
<h2>Counter 3</h2>
<p class="@colorStyle @align">
    <strong>Current count: </strong><input @bind=count  @onkeypress="KeyHandler" @onkeypress:preventDefault="true"/> <strong>@count</strong>
        <span hidden="@(count <=10)" class="red-color">Count is too high!</span>
    <span hidden="@(!numberError)" class="red-color">Only digits alowed!</span>
</p>
<p>
    <button class="btn btn-primary" @onclick="Increase">Increase</button>
</p>
@code {
    int count = 0;
    bool numberError = false;
    private string colorStyle = "blue-color";
    private string align = "left";

    private void Increase()
    {
        if (count < 10)
        {
            count++;

        }
    }

    private void KeyHandler(KeyboardEventArgs e)
    {
       if (e.Key == "+")
        {
            Increase();
        }
         else if (e.Key == "-")
        {
            count = count - 1;
        }
    }

}
